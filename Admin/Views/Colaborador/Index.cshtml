@model List<Colaborador>

<div class="titulo"><a>Lista de colaboradores</a></div>
<hr color="DarkSlateBlue">
<br />
<div class="grid">
    <div class="cartao">
        <table id="tabela-cbpm-admin" class="display table table-striped table-bordered stripe nowrap">
            <thead>
                <tr>
                    <td></td>
                    <td>Nome</td>
                    <td>Email</td>
                    <td>Foto</td>
                    <td>Ramal</td>
                    <td>Cargo</td>
                    <td>Seção</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var colaborador in Model)
                {
                    <tr>
                        <td><a href="./Funcionario/@colaborador.Id"><detalhe></detalhe></a></td>
                        <td>@Html.Raw(colaborador.Posto.Titulo) @Html.Raw(colaborador.Nome)</td>
                        <td>@colaborador.Email</td>
                        <td>
                            <img src="/img/aniversariantes/@(colaborador.UrlImagem ?? "user.png")" />
                        </td>

                        <td>@colaborador.Ramal</td>
                        <td>@colaborador.Cargo?.Titulo</td>
                        <td>@colaborador.Secao?.Titulo</td>
                        <td><a class="btn btn-link" asp-controller="Colaborador" asp-action="Excluir" asp-route-id="@colaborador.Id" onclick="return confirmarExclusao()">Excluir</a></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>


</div>
<br />
<a class="btn btn-primary" asp-controller="Colaborador" asp-action="Novo">Novo</a>

@section Scripts {
    <script>
        function confirmarExclusao() {
            return confirm("Tem certeza que deseja excluir esse registro?")
        }
    </script>

}